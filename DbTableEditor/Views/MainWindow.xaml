<Window x:Class="DbTableEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:vm="clr-namespace:DbTableEditor.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}"
        Title="Редактор таблиц" 
        Height="450" 
        Width="800" 
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" 
                    Value="5"/>
            <Setter Property="Padding"
                    Value="5 2"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Левая часть-->
        <DockPanel Grid.Row="0"
                   Grid.Column="0"
                   Grid.RowSpan="3">

            <TextBlock Text="Список таблиц"
                       VerticalAlignment="Bottom"
                       DockPanel.Dock="Top"/>

            <DataGrid AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0 0 5 0"
                      ItemsSource="{Binding ListStructureTables}"
                      SelectedItem="{Binding SelectedTable, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Таблицы" 
                                        Binding="{Binding TableName}"
                                        Width="*" 
                                        IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <GridSplitter Width="5"
                      Grid.Row="0"
                      Grid.Column="1"
                      Grid.RowSpan="3"
                     Background="LightGray"
                      HorizontalAlignment="Stretch"/>

        <!--Правая часть-->
        <TextBlock Text="Описание таблицы"
                   Grid.Row="1"
                   Grid.Column="3"
                   Margin="5"/>

        <DataGrid Grid.Row="2"
                  Grid.Column="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="5 0 0 0"
                  ItemsSource="{Binding Columns}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя столбца" 
                                    Binding="{Binding ColumnName}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Тип данных" 
                                    Binding="{Binding DataType}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Максимальная длина" 
                                    Binding="{Binding MaxLength}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="IsNullable" 
                                    Binding="{Binding IsNullable}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Первичный ключ" 
                                    Binding="{Binding IsPrimaryKey}"
                                    Width="*" 
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="5">

            <Button Content="Добавить таблицу"/>
            <Button Content="Удалить таблицу"/>
            <Button Content="Редакторвать таблицу"/>
            
        </StackPanel>
        

    </Grid>
</Window>
