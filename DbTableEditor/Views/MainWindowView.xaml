<Window x:Class="DbTableEditor.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:vm="clr-namespace:DbTableEditor.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}"
        Title="Редактор таблиц" 
        Height="450" 
        Width="800" 
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" 
                    Value="5"/>
            <Setter Property="Padding"
                    Value="5 2"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Левая часть-->
        <DockPanel Grid.Row="0"
                   Grid.Column="0"
                   Grid.RowSpan="3">

            <Button Content="Обновить список таблиц"
                    VerticalAlignment="Bottom"
                    DockPanel.Dock="Top"
                    Margin="0 5 5 10"
                    Command="{Binding UpdateListTablesCommand}"/>

            <DataGrid AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0 0 5 0"
                      ItemsSource="{Binding ListStructureTables}"
                      SelectedItem="{Binding SelectedTable, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Таблицы" 
                                        Binding="{Binding TableName}"
                                        Width="*" 
                                        IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <GridSplitter Width="5"
                      Grid.Row="0"
                      Grid.Column="1"
                      Grid.RowSpan="3"
                     Background="LightGray"
                      HorizontalAlignment="Stretch"/>

        <!--Правая часть-->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="5 0 0 0">
            <TextBlock Text="Имя таблицы: "
                       Margin="2.5"/>
            <TextBlock Text="{Binding SelectedTable.TableName}"
                       Margin=" 0 2.5"/>
        </StackPanel>


        <DataGrid Grid.Row="2"
                  Grid.Column="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="5 0 0 0"
                  ItemsSource="{Binding Columns}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя столбца" 
                                    Binding="{Binding ColumnName}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Тип данных" 
                                    Binding="{Binding DataType}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Максимальная длина" 
                                    Binding="{Binding MaxLength}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="IsNullable" 
                                    Binding="{Binding IsNullable}"
                                    Width="*" 
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Первичный ключ" 
                                    Binding="{Binding IsPrimaryKey}"
                                    Width="*" 
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="3">

            <Button Content="Добавить таблицу"
                    Command="{Binding OpenWindowCreateTableCommand}"
                    CommandParameter="add"/>
            
            <Button Content="Удалить таблицу"
                    Command="{Binding DeleteTableCommand}"/>
            
            <Button Content="Редакторвать таблицу"
                    Command="{Binding OpenWindowChangeTableCommand}"
                    CommandParameter="change"/>
            
        </StackPanel>
        

    </Grid>
</Window>
